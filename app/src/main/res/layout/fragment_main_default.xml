<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackbeltcoder.nunut.app.MainDefaultFragment">

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_register_big"
            android:layout_gravity="center_horizontal"/>

        <com.blackbeltcoder.nunut.component.CustomTextView
            android:id="@+id/tvTitle1"
            style="@style/txt_20_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:maxLines="3"
            app:textStyle="bold"
            android:text="@string/msg_register_first" />

    </LinearLayout>

</ScrollView>
