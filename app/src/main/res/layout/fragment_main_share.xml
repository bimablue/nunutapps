<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackbeltcoder.nunut.app.MainShareFragment">

    <LinearLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:background="@color/colorBackgroundGrey">

            <com.blackbeltcoder.nunut.component.CustomTextView
                android:id="@+id/tvBalanceLabel"
                style="@style/txt_20_grey"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:textStyle="bold"
                android:text="@string/label_balance" />

            <com.blackbeltcoder.nunut.component.CustomTextView
                android:id="@+id/tvBalanceValue"
                style="@style/txt_20_grey"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                app:textStyle="bold"
                android:text="Rp 500.000" />

        </LinearLayout>

        <com.blackbeltcoder.nunut.component.CustomTextView
            android:id="@+id/tvTitle1"
            style="@style/txt_20_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:maxLines="3"
            app:textStyle="bold"
            android:text="@string/msg_share_route_2" />

        <com.blackbeltcoder.nunut.component.CustomTextView
            android:id="@+id/tvTitle2"
            style="@style/txt_20_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:maxLines="2"
            app:textStyle="bold"
            android:text="@string/msg_share_code" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorBackgroundGrey"
                android:layout_toLeftOf="@+id/tvRefCode"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/separator_margin"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <com.blackbeltcoder.nunut.component.CustomTextView
                android:id="@+id/tvRefCode"
                style="@style/txt_40_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ahimsaue05" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorBackgroundGrey"
                android:layout_toRightOf="@+id/tvRefCode"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="@dimen/separator_margin"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivShareFacebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/ic_facebook"/>

            <ImageView
                android:id="@+id/ivShareTwitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:src="@drawable/ic_twitter"/>

            <ImageView
                android:id="@+id/ivShareMail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:src="@drawable/ic_gmail"/>

            <ImageView
                android:id="@+id/ivShareWhatsapp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:src="@drawable/ic_whatsapp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
