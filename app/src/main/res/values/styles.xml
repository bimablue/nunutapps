<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="txt_18_black">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_16_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_18_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txt_20_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_30_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="txt_40_green">
        <item name="android:textColor">@color/colorProgressGreen</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="txt_16_white">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_20_white">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_16_grey">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_20_grey">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="txt_24_grey">
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="txt_18_lgrey">
        <item name="android:textColor">@color/colorTextLightGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/pull_top</item>
        <item name="android:windowExitAnimation">@anim/push_down</item>
    </style>

    <style name="button_default" parent="txt_20_white">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="button_default_grey" parent="txt_20_white">
        <item name="android:background">@drawable/button_default_grey</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

</resources>
