<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackbeltcoder.nunut.app.SplashActivityFragment"
    tools:showIn="@layout/splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/ivMainLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/main_logo"/>

        <com.blackbeltcoder.nunut.component.CustomTextView
            android:id="@+id/tvQuote"
            style="@style/txt_20_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-70dp"
            android:layout_below="@+id/ivMainLogo"
            android:gravity="center"
            app:textStyle="regular"
            android:text="@string/msg_quote" />

        <com.crystal.crystalpreloaders.widgets.CrystalPreloader
            android:id="@+id/progressCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMainLogo"
            android:layout_centerInParent="true"
            app:crs_pl_style="tornado_circle_2"
            app:crs_pl_size="small"
            app:crs_pl_fg_color="#fff"
            app:crs_pl_bg_color="#fff"/>

    </RelativeLayout>

</RelativeLayout>
